@model Login
@{
    ViewData["Title"] = "giris";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<form method="post" asp-controller="Login" asp-action="giris">
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="exampleInputEmail1" asp-for="userName" required placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Sifre</label>
        <input type="password" asp-for="sifre" class="form-control" id="exampleInputPassword1" required placeholder="Password">
    </div>
    
    <button type="submit" class="btn btn-primary">Giris </button>
</form>
